{
    "name": "sorteio-garagens-tests",
    "version": "1.0.0",
    "type": "module",
    "description": "Testes automatizados para o sistema de sorteio de garagens Flor de Lis",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:sorteio": "jest --testNamePattern=\"Sorteio completo\"",
        "test:verbose": "jest --verbose",
        "test:silent": "jest --silent"
    },
    "dependencies": {
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.23.0",
        "babel-jest": "^29.7.0"
    },
    "jest": {
        "preset": "default",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "moduleNameMapping": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "testMatch": [
            "**/tests/**/*.test.js",
            "**/tests/**/*.spec.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/tests/**",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "text",
            "html",
            "lcov"
        ],
        "verbose": true,
        "setupFilesAfterEnv": [
            "<rootDir>/src/tests/setup/jest.setup.js"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    }
}