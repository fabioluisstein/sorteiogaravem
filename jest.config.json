{
    "testEnvironment": "node",
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "globals": {
        "babel-jest": {
            "useESM": true
        }
    },
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
        "**/__tests__/stress-lottery-mock.test.js",
        "**/__tests__/stress-sorteio-simples.test.js"
    ],
    "verbose": true,
    
    "testTimeout": 300000,
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/tests/**"
    ]
}