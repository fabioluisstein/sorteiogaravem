{
    "testEnvironment": "node",
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
        "**/src/tests/**/*.test.js",
        "**/__tests__/**/*.test.js"
    ],
    "verbose": true,
    "setupFilesAfterEnv": [
        "<rootDir>/src/tests/setup/jest.setup.js"
    ],
    "testTimeout": 300000,
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/tests/**"
    ]
}